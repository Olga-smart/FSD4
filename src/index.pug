doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="initial-scale=1.0, width=device-width")
    title Range slider
  body
    .container
      h1 Demo

      section
        h2 Default params
        .range-slider.js-range-slider

      section
        h2 Minimalistic
        .range-slider.js-range-slider(
          data-min-max-labels="false",
          data-value-labels="false",
        )

      section
        h2 Single
        .range-slider.js-range-slider(
          data-range="false"
        )

      section
        h2 With scale
        .range-slider.js-range-slider(
          data-scale="true"
        )  

      section
        h2 Vertical
        .range-slider.js-range-slider(
          data-vertical="true"
        )

