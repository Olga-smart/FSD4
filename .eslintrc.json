{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "plugin:fsd/all"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "fsd"
  ],
  "ignorePatterns": ["src/view/pages-for-puppeteer/*"],
  "overrides": [
    {
      "files": "*.ts, *.tsx",
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ]
}
